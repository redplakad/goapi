# Production Environment Configuration

# Database Configuration
DB_HOST=your-production-db-host
DB_PORT=3306
DB_USER=your-db-user
DB_PASSWORD=your-secure-db-password
DB_NAME=monitoring

# Server Configuration
PORT=8080
GIN_MODE=release

# Application Environment
APP_ENV=production

# API Key Configuration - Generate unique keys for production!
API_KEY_LARAVEL=your-secure-laravel-api-key-prod-2025-change-this
API_KEY_MOBILE=your-secure-mobile-api-key-prod-2025-change-this
API_KEY_ADMIN=your-secure-admin-api-key-prod-2025-change-this

# Security Headers
CORS_ALLOWED_ORIGINS=https://your-frontend-domain.com,https://admin.your-domain.com
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-API-Key

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
